<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <Button
            android:id="@+id/button_rules"
            android:layout_width="match_parent"
            android:background="@drawable/rules_background"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Rules" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/just_a_line" />

        <Button
            android:id="@+id/button_items"
            android:layout_width="match_parent"
            android:background="@drawable/items_background"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Items" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/just_a_line" />

        <Button
            android:id="@+id/button_character"
            android:layout_width="match_parent"
            android:background="@drawable/character_background"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Character" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/just_a_line" />

        <Button
            android:id="@+id/button_calculator"
            android:layout_width="match_parent"
            android:background="@drawable/calculator_background"
            android:layout_height="70dp"
            android:text="Damage Calculator"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/just_a_line" />

        <Button
            android:id="@+id/button_roller"
            android:layout_width="match_parent"
            android:background="@drawable/roller_background"
            android:layout_height="70dp"
            android:text="Dice Simulator"
            android:layout_weight="1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>